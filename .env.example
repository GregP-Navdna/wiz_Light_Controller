# Server Configuration
PORT=3000
VITE_BACKEND_PORT=3000  # Frontend proxy target (should match PORT)
NODE_ENV=development

# Network Scanning Configuration
# Leave empty to auto-detect, or specify manually (e.g., 192.168.1.0/24)
SUBNET=

# Scan concurrency - number of parallel probes (10-50 recommended)
SCAN_CONCURRENCY=20

# Probe timeout in milliseconds
PROBE_TIMEOUT_MS=2000

# Database Configuration
DB_PATH=./data/wiz.db

# WebSocket Configuration
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000

# Security (optional - set a token to require authentication)
API_SECRET=

# Logging
LOG_LEVEL=info
