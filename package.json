{
  "name": "wiz-lan-controller",
  "version": "1.0.0",
  "description": "Local network WIZ bulb discovery and control system",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "tsx watch src/server/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p tsconfig.server.json",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "docker:build": "docker build -t wiz-lan-controller .",
    "docker:run": "docker run -p 3000:3000 --network host wiz-lan-controller",
    "cli:scan": "tsx src/cli/scanner-cli.ts",
    "postinstall": "cd frontend && npm install"
  },
  "keywords": ["wiz", "smart-home", "iot", "bulb-control"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "better-sqlite3": "^9.2.2",
    "node-schedule": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "oui": "^12.0.29",
    "axios": "^1.6.2",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node-schedule": "^2.1.5",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
